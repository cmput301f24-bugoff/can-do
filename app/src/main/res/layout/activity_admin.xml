<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Button for browsing events -->
    <Button
        android:id="@+id/button_browse_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Events"
        android:layout_marginBottom="16dp" />

    <!-- Button for browsing profiles -->
    <Button
        android:id="@+id/button_browse_profiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Profiles"
        android:layout_marginBottom="16dp" />

    <!-- Button for browsing images -->
    <Button
        android:id="@+id/button_browse_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Images" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
